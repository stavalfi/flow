{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "noImplicitAny": true,
    "listFiles": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@parser/*": ["../parser/src/*"],
      "@editor/*": ["../editor/src/*"],
      "@flower/*": ["../flower/src/*"],
      "@utils/*": ["../utils/src/*"],
      "@parser-test/*": ["../parser/test/*"],
      "@editor-test/*": ["../editor/test/*"],
      "@flower-test/*": ["../flower/test/*"],
      "@utils-test/*": ["../utils/test/*"]
    }
  },
  "include": ["src"],
  "exclude": ["test", "dist", "node_modules", "../../node_modules"]
}
