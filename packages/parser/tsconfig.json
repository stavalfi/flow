{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "test/*", "node_modules/*", "../../node_modules/*"],
      "@parser/*": ["dist/*"],
      "@test/*": ["test/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "composite": false,
    "noImplicitAny": true,
    "noEmit": true,
    "listFiles": false
  },
  "include": ["src", "test"],
  "exclude": ["dist", "node_modules", "../../node_modules"]
}
