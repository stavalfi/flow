{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "noEmit": true,
    "listFiles": false,
    "baseUrl": "packages",
    "paths": {
      "@parser/*": ["parser/src/*"],
      "@editor/*": ["editor/src/*"],
      "@flower/*": ["flower/src/*"],
      "@utils/*": ["utils/src/*"],
      "@parser-test/*": ["parser/test/*"],
      "@editor-test/*": ["editor/test/*"],
      "@flower-test/*": ["flower/test/*"],
      "@utils-test/*": ["utils/test/*"],
      "@jstream/parser": ["parser/src/index.ts"],
      "@jstream/flower": ["flower/src/index.ts"],
      "@jstream/build": ["build/src/index.ts"],
      "@jstream/utils": ["utils/src/index.ts"]
    }
  },
  "files": ["packages/declerations/declerations.d.ts"],
  "exclude": ["node_modules"]
}
