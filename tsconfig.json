{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "noEmit": true,
    "listFiles": false,
    "baseUrl": "packages",
    "paths": {
      "*": [
        "../node_modules/*",
        "parser/src/*",
        "editor/src/*",
        "flower/src/*",
        "build/src/*",
        "parser/test/*",
        "editor/test/*",
        "flower/test/*",
        "build/test/*",
        "parser/node_modules/*",
        "editor/node_modules/*",
        "flower/node_modules/*",
        "build/node_modules/*"
      ],
      "@parser/*": ["parser/src/*"],
      "@editor/*": ["editor/src/*"],
      "@flower/*": ["flower/src/*"],
      "@parser-test/*": ["parser/test/*"],
      "@editor-test/*": ["editor/test/*"],
      "@flower-test/*": ["flower/test/*"],
      "@flow/parser": ["parser/src/index.ts"],
      "@flow/editor": ["editor/src/index.tsx"],
      "@flow/flower": ["flower/src/index.ts"],
      "@flow/build": ["build/src/index.ts"]
    }
  },
  "files": ["packages/declerations/declerations.d.ts"],
  "exclude": ["node_modules"]
}
